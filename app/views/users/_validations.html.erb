<% if (subscriptions = current_community_subscriptions_validated_by_user(user)).exists? %>
  <div class="user__profile--block user__validations">
    <header>
      <h4><%= t ".title" %> (<%= subscriptions.count %>)</h4>
    </header>
    <div class="user__links user__links--evaluations user__links--collapsed" id="user-subscriptions">
      <% subscriptions.count.inspect %>
      <% for subscription in subscriptions %>
        <div class="user__links__item user__links__item--evaluations">
          <span class="icon">
            <svg class="octicon octicon-verified" viewBox="0 0 16 16" version="1.1" width="16" height="16" aria-hidden="true"><path fill-rule="evenodd" d="M15.67 7.06l-1.08-1.34c-.17-.22-.28-.48-.31-.77l-.19-1.7a1.51 1.51 0 0 0-1.33-1.33l-1.7-.19c-.3-.03-.56-.16-.78-.33L8.94.32c-.55-.44-1.33-.44-1.88 0L5.72 1.4c-.22.17-.48.28-.77.31l-1.7.19c-.7.08-1.25.63-1.33 1.33l-.19 1.7c-.03.3-.16.56-.33.78L.32 7.05c-.44.55-.44 1.33 0 1.88l1.08 1.34c.17.22.28.48.31.77l.19 1.7c.08.7.63 1.25 1.33 1.33l1.7.19c.3.03.56.16.78.33l1.34 1.08c.55.44 1.33.44 1.88 0l1.34-1.08c.22-.17.48-.28.77-.31l1.7-.19c.7-.08 1.25-.63 1.33-1.33l.19-1.7c.03-.3.16-.56.33-.78l1.08-1.34c.44-.55.44-1.33 0-1.88zM6.5 12L3 8.5 4.5 7l2 2 5-5L13 5.55 6.5 12z"></path></svg>
          </span>
          <%= link_to_user subscription.user do %>
            <strong class="user__links--user">
              <%= subscription.user.name %>
            </strong>
          <% end %>
          &nbsp;&#8594;
          <%= link_to subscription.skill.name, skill_path(current_community, subscription.skill), class: "user__links--skill" %>&nbsp;
          <% if homework = subscription.homeworks.approved.last %>
            <%= link_to "(dÃ©fi)", encode_file_url(homework.file_url), class: "user__links--file", title: homework.file_name %>
          <% end %>
        </div>
      <% end %>
      <% if subscriptions.count > 4 %>
        <span class="btn btn--small btn--toggle" data-module="Toggle.Css"
            data-target="#user-subscriptions"
            data-css="user__links--collapsed"><%= t "lib.view_all" %></span>
      <% end %>
    </div>
  </div>
<% end %>
