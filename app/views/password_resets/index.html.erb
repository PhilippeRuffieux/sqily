<header>
  <%= render "shared/hep_logo" %>
  <%= render "shared/sqily_logo" %>
</header>

<section class="login">
  <h4><%= t ".title" %></h4>
  <%= form_tag password_resets_path do %>
    <% if @email_not_found %>
      <div class="field_with_errors"><label for="email"><%= t ".error_message" %></label></div>
    <% end %>
    <%= text_field_tag :email, params[:email], placeholder: t(".placeholder") %>
    <%= submit_tag t(".submit") %>
  <% end %>
</section>
