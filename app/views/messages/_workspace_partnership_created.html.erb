<li id="message-<%= message.id %>" data-date="<%= I18n.l(message.created_at.to_date, format: '%A, %d %b %Y') %>" class="post">
  <%= link_to_user message.from_user do %> 
    <%= user_avatar(message.from_user) %>
  <% end %>

  <div class="message">
    <div class="title">
      <span class="title">
        <% if message.workspace_partnership.read_only %>
          <%= t(".title_reader", user: link_to_user(message.from_user)).html_safe %>
        <% else %>
          <%= t(".title_writer", user: link_to_user(message.from_user)).html_safe %>
        <% end %>
        <span class="ago"><%= link_to_message message %></span>
      </span>
    </div>
    <div id="message-text-<%= message.id %>">
      <div class="box">
        <a href="<%= workspace_path(current_community, message.workspace_partnership.workspace) %>">
          <span class="icon">
            <span class="icon private">
              <%= octicon 'file' %>
            </span>
          </span><%= message.workspace_partnership.workspace.title %>
        </a>
      </div>
    </div>
  </div>
</li>
