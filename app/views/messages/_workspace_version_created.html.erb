<li id="message-<%= message.id %>" data-date="<%= I18n.l(message.created_at.to_date, format: '%A, %d %b %Y') %>" class="post">
  <span class="avatar icon">
    <%= octicon "git-branch" %>
  </span>
  <div class="message">
    <div class="title">
      <span class="title">
        <%= t(".message",
              user: link_to_user(message.from_user),
              version: message.workspace_version.number,
              workspace: link_to(message.to_workspace.title, workspace_path(id: message.to_workspace_id))
            ).html_safe
        %>
        <span class="ago"><%= link_to_message message %></span>
      </span>
      <%= render "/messages/vote_button", message: message %>
      <%= render "/messages/unread_button", message: message %>
    </div>
  </div>
</li>

