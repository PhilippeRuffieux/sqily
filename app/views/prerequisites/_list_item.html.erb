<li id="prerequisite-<%= prerequisite.id %>">
  <span data-toggle-prerequisite-mandatory data-url="<%= prerequisite_toggle_mandatory_path(current_community, @skill, prerequisite) %>" class="icon btn small mandatory <%= active_if prerequisite.mandatory %>" title="<%= t ".mandatory_tooltip" %>">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 8 8">
      <path class="locked" d="M3 0c-1.1 0-2 .9-2 2v1h-1v4h6v-4h-1v-1c0-1.1-.9-2-2-2zm0 1c.56 0 1 .44 1 1v1h-2v-1c0-.56.44-1 1-1z" transform="translate(1)" />
      <path class="unlocked" d="M3 0c-1.1 0-2 .9-2 2h1c0-.56.44-1 1-1s1 .44 1 1v2h-4v4h6v-4h-1v-2c0-1.1-.9-2-2-2z" transform="translate(1)" />
    </svg>
  </span>
  <span class="skill"><%= prerequisite.from_skill.name %></span>
  <span data-delete-prerequisite="#prerequisite-<%= prerequisite.id %>" data-url="<%= prerequisite_path(current_community, @skill, prerequisite) %>" class="btn small delete">
    <%= t "lib.delete" %>
  </span>
</li>
