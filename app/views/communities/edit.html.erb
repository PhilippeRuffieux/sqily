<header>
  <div class="title">
    <h2><a href="<%= skills_path(current_community) %>"><%= current_community.name %></a></h2>
    
    <a href="<%= skills_path(current_community) %>" class="icon icon-clear icon--close">
      <%= octicon "x" %>
    </a>
  </div>
</header>
<div class="post-date"><hr></div>
<nav class="submenu">
  <ul class="tabs">
    <li>
      <%= link_to duplication_form_community_path(current_community), class: "btn btn--small btn--admin", title: t("lib.duplicate") do %>
        <%= octicon "git-branch" %>
      <% end %>
    </li>
    <li>
      <%= link_to "mailto:admin@sqily.com?subject=Suppression de la communauté #{current_community.permalink}", class: "btn btn--small btn--admin", title: "Demander la suppression de la communauté" do %>
        <%= octicon "trash" %>
      <% end %>
    </li>
  </ul>
</nav>
<div class="post-date"><hr></div>
<section class="form">
  <%= render "form" %>
  <%= render "/layouts/footer" %>
</section>
